@{
  Layout = "_Layout";
}

@using Factory.Models;
@using Microsoft.EntityFrameworkCore;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model List<Factory.Models.Machine>;
@using Factory.Controllers;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add new Machine", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>